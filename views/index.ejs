<%- include('./common/header.ejs') %>
<body>
    <%- include('./common/navbar.ejs') %>

    <main>
        <!-- Intro Section -->
        <section class="intro">
            <h1>Welcome to My Blog</h1>
            <p>This is the home page of my personal blog where I share thoughts, ideas, and projects.</p>
            <a class="button" href="#blog-posts">Read My Blog Posts</a>
        </section>

        <!-- Recent Posts Section -->
        <section class="recent-posts">cl
            <h2>Recent Blog Posts</h2>
            <ul class="posts-list">
                <li><a href="/post/first-post">How to Start Coding</a></li>
                <li><a href="/post/second-post">Introduction to Node.js</a></li>
                <li><a href="/post/third-post">Markdown for Blogging</a></li>
            </ul>
        </section>

        <!-- Blog Posts Section -->
        <section id="blog-posts" class="blog-posts">
            <h1>Blog Posts</h1>
            <% if (blogs && blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                    <article class="blog-entry">
                        <header>
                            <h2><%= blog.title %></h2>
                        </header>
                        <p><%= blog.content %></p>
                    </article>
                <% }) %>
            <% } else { %>
                <p>No blog posts found.</p>
            <% } %>
        </section>

        <!-- Blog Post Form Section -->
        <section class="post-form">
            <h1>Post Your First Code Project</h1>
            <form action="/" method="POST">
                <div class="form-group">
                    <label for="title">Blog Title:</label>
                    <input type="text" name="title" id="title" required>
                </div>
                
                <div class="form-group">
                    <label for="content">Blog Content:</label>
                    <textarea name="content" id="content" required></textarea>
                </div>
                
                <button type="submit">Submit Blog</button>
            </form>
        </section>
    </main>

    <%- include('./common/footer.ejs') %>
</body>
</html>
